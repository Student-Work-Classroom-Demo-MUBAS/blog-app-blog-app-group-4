<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= post.title %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .post-tags span {
      margin-right: 5px;
      font-size: 0.85rem;
      padding: 2px 8px;
      border-radius: 15px;
      display: inline-block;
    }
    .post-tags .design { background-color: #e0e0ff; color: #5c5cff; }
    .post-tags .research { background-color: #e0f0ff; color: #0099ff; }
    .post-tags .presentation { background-color: #ffe0e0; color: #ff4c4c; }
    .post-image { width: 100%; height: 400px; object-fit: cover; margin-bottom: 20px; }
  </style>
</head>
<body>
  <div class="container mt-5">
    
    <!-- Publication Date -->
    <p class="text-muted text-center">Published <%= post.date%> by <%= post.author%></p>

    <!-- Title -->
    <h1 class="text-center mb-3"><%= post.title %></h1>

    <!-- Description -->

    <!-- Tags -->
    <div class="post-tags text-center mb-4">
      <% post.tags.forEach(tag => { %>
        <span class="<%= tag.toLowerCase() %>"><%= tag %></span>
      <% }) %>
    </div>

    <!-- Image -->
    <img src="<%= post.image %>" class="post-image" alt="<%= post.title %>">

    <p class="text-center text-secondary mb-4"><%= post.description %></p>
     <!-- Edit & Delete Buttons -->
    <div class="text-center">
      <a href="/edit/<%= post.id %>" class="btn btn-warning me-2">Edit</a>
      <button class="btn btn-danger" onclick="deletePost(<%= post.id %>)">Delete</button>
    </div>
  </div>
<script>
  function deletePost(id) {
    if (confirm('Are you sure you want to delete this post? This action cannot be undone.')) {
      fetch(`/delete/${id}`, { method: 'POST' })
        .then(() => window.location.href = '/')
        .catch(err => alert('Delete failed: ' + err));
    }
  }
</script>

  </div> <!-- end container -->

  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

