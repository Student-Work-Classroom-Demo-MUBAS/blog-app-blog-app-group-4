<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Blog Posts</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container py-5">
    <div class="row g-4">
      <% posts.forEach(post => { %>
        <div class="col-12 col-md-6 col-lg-4">
          <div class="card h-60 shadow-sm">
            <img src="<%= post.image %>" class="card-img-top h-40 w-full object-cover" alt="<%= post.title %>" style="height: 220px; object-fit: cover;">
            <div class="card-body d-flex flex-column">
              <h6 class="text-primary mb-2">
                <%= post.author %> · <%= post.date %>
              </h6>
              <h5 class="card-title"><%= post.title %></h5>
              <p class="card-text flex-grow-1"><%= post.description.substring(0, 150) %></p>
              <div class="mb-2">
                <% post.tags.forEach(tag => { %>
                  <span class="badge bg-secondary me-1"><%= tag %></span>
                <% }) %>
              </div>
              <a href="post/<%= post.id %>" class="btn btn-outline-primary mt-auto">Read More →</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>
